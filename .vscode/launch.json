{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rust-doom-demo'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rust-doom-demo",
                    "--package=rust-doom-demo",
                ],
                "filter": {
                    "name": "rust-doom-demo",
                    "kind": "bin"
                }
            },
            "args": [
                "--textures",
                "assets/textures",
                "--map",
                "assets/box.map"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}